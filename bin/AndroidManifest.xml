<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.game.kamz.dotsandbox"
    android:versionCode="7"
    android:versionName="0.5" >

    <!-- Provide support for all display sizes. Only from API version 4 
    for example The HTC Wildfire supports. On this the game should run well.
     -->
    <uses-sdk
        android:minSdkVersion="3"
        android:targetSdkVersion="4" />

    <application
        android:allowClearUserData="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name="com.game.kamz.dotsandbox.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.game.kamz.dotsandbox.GameActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
    </application>

</manifest>